{
  "name": "ePages Version Checker",
  "version": "1.0",
  "description": "Letting you know when you are visiting an ePages shop.",
  "permissions": ["<all_urls>"],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "images/disabled.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "icons": {
    "16": "images/enabled.png",
    "32": "images/enabled.png",
    "48": "images/enabled.png",
    "128": "images/enabled.png"
  },
  "manifest_version": 2
}
